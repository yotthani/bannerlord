  <!-- ==================== PROGRESS BAR ==================== -->
  <Brush Name="FaceLearner.Progress.Track">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#1A1512FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"/>
      </Style>
    </Styles>
  </Brush>

  <Brush Name="FaceLearner.Progress.Fill">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#C7A672FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"/>
      </Style>
    </Styles>
  </Brush>

  <!-- ==================== SLIDER (for Edit page) ==================== -->
  <!-- Based on TaleWorlds SPOptions slider pattern -->
  <Brush Name="FaceLearner.Slider.Handle">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#D4B896FF"/>
      <BrushLayer Name="Hovered" Sprite="BlankWhiteSquare_9" Color="#E8CCA8FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Hovered"/>
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Hovered" ColorFactor="0.8"/>
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.3" AlphaFactor="0.5"/>
      </Style>
    </Styles>
  </Brush>

  <Brush Name="FaceLearner.Slider.Background">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#3A3530FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"/>
      </Style>
    </Styles>
  </Brush>

  <Brush Name="FaceLearner.Slider.Filler">
    <Layers>
      <BrushLayer Name="Default" Sprite="BlankWhiteSquare_9" Color="#C7A672FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"/>
      </Style>
    </Styles>
  </Brush>

  <Brush Name="FaceLearner.Slider.Handle">
