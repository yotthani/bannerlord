      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="1.8" Color="#C7A672FF"/>
      </Style>
    </Styles>
  </Brush>

  <!-- ==================== INDICATORS ==================== -->
  <Brush Name="FaceLearner.Indicator.Green">
