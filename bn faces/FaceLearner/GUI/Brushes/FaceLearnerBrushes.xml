    </Styles>
  </Brush>

  <!-- ==================== SCORE TEXT ==================== -->
  <Brush Name="FaceLearner.Score.Text" Font="Galahad" TextHorizontalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#4CAF50FF" FontSize="22" TextGlowColor="#4CAF5044" TextGlowRadius="3"/>
    </Styles>
  </Brush>

</Brushes>
