<?xml version="1.0" encoding="UTF-8"?>
<Prefab>
  <Window>
    <Widget DataSource="{..}" WidthSizePolicy="Fixed" HeightSizePolicy="CoverChildren"
            SuggestedWidth="200" HorizontalAlignment="Right" VerticalAlignment="Top"
            MarginTop="200" MarginRight="10" IsVisible="@IsVisible">
      <Children>
        <Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                Sprite="BlankWhiteSquare_9" Color="#000000AA" MarginLeft="-5" MarginRight="-5" MarginTop="-5" MarginBottom="-5"/>
        <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
                    HorizontalAlignment="Center" Brush="Popup.Text.Small" Brush.FontSize="14"
                    Brush.FontColor="#FFD700FF" Text="Formation Layout" MarginBottom="5"/>
        <ListPanel DataSource="{LayoutOptions}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
                   StackLayout.LayoutMethod="VerticalBottomToTop">
          <ItemTemplate>
            <ButtonWidget DoNotPassEventsToChildren="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed"
                          SuggestedHeight="30" MarginBottom="2" Command.Click="ExecuteSelect" Brush="ButtonBrush1">
              <Children>
                <TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Brush="Popup.Text.Small" Brush.FontSize="11" Text="@Name"/>
              </Children>
            </ButtonWidget>
          </ItemTemplate>
        </ListPanel>
      </Children>
    </Widget>
  </Window>
</Prefab>
